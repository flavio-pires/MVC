<main>
        <div id="reserva">
            <div class="login">
                <h2><u>Login</u></h2>
                <form method="POST" action='@Url.Action("Cadastro", "Login")'>
                    <div>
                        <label for="email">E-mail</label>
                        <br>
                        <input id="email" type="email" name="email" required>
                    </div>
                    <div>
                        <label for="password">Senha</label>
                        <br>
                        <input id="senha" type="password" name="senha" required>
                    </div>
                    <input type="submit" value="Entrar">
                </form>
            </div>
            <div class="cadastro">
                <h2><u>Cadastro</u></h2>
                <form method="GET" action="contato.html">
                    <div>
                        <label for="email">E-mail</label>
                        <br>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div>
                        <label for="password">Senha</label>
                        <br>
                        <input type="password" id="password" name="senha" required>
                    </div>
                    <div>
                        <label for="nome">Nome Completo</label>
                        <br>
                        <input type="text" id="text" name="nome">
                    </div>
                    <div>
                        <label for="cpf">CPF</label>
                        <br>
                        <input type="number" id="number" name="cpf">
                    </div>
                    <div>
                        <label for="telefone">Telefone</label>
                        <br>
                        <input type="number" id="telefone" name="telefone">
                    </div>
                    <div>
                        <label for="nome_evento">Nome do Evento</label>
                        <br>
                        <input type="text" id="nome_evento" name="nome_evento">
                    </div>
                    <div>
                        <label for="data_evento">Data do Evento</label>
                        <br>
                        <input type="date" id="data_evento" name="data_evento">
                    </div>
                    <div>
                        <label for="quantidade">Quantidade de Pessoas</label>
                        <br>
                        <input type="number" id="quantidade" name="quantidade">
                    </div>
                    <div>
                        <label for="tipo_evento">Tipo de Evento</label>
                        <br>
                        <input type="checkbox" value="Público"> Público
                        <input type="checkbox" value="Privado"> Privado
                    </div><br>
                    <div>
                        <input type="checkbox" value="Iluminação"> Contratar serviço de iluminação
                        <input type="checkbox" value="Som"> Contratar serviço de som
                    </div><br>
                    <div>
                        <label for="descrição">Observações/Descrição do evento</label>
                        <br>
                        <input type="area" id="descrição">
                    </div><br>
                    <div id="pagamento">
                        <p>Formas de Pagamento</p>
                        <p>Cartão de Crédito</p>
                        <p>Boleto Bancário</p>
                        <p>Transferência</p>
                    </div><br>
                    <div>
                        <input type="checkbox" value="termos"> Aceito os termos e condições de uso
                    </div><br>
                    <p>Valor inicial do aluguel do espaço - R$ 10.000,00</p><br>
                    <input type="submit" value="Enviar" />
                </form>
            </div>
        </div>
    </main>