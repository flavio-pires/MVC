<main>
    <div id="reserva">
    <div class="cadastro">
            <h2><u>Cadastro</u></h2>
            <form method="POST" action='@Url.Action("CadastrarCliente", "Cadastro")'>
                <div>
                    <label for="nome">Nome Completo</label>
                    <br>
                    <input type="text" id="nome" name="nome" required>
                </div>
                <div>
                    <label for="cpf">CPF</label>
                    <br>
                    <input type="number" id="cpf" name="cpf" maxlength="11" minlength="11" placeholder="Digite somente números" required>
                </div>
                <div>
                    <label for="telefone">Telefone</label>
                    <br>
                    <input type="telefone" id="telefone" maxlength="20" minlength="11" name="telefone" placeholder="Digite somente números">
                </div>
                <div>
                    <label for="email">E-mail</label>
                    <br>
                    <input type="email" id="email" name="email" required>
                </div>
                <div>
                    <label for="password">Senha</label>
                    <br>
                    <input type="password" id="senha" name="senha" maxlength="20" minlength="6" required>
                </div>
                <div>
                    <label for="confirmar_senha">Confirmar Senha</label>
                    <br>
                    <input type="password" id="confirmar_senha" name="confirmar_senha" maxlength="20" minlength="6" required>
                </div>
                <input type="submit" value="Finalizar cadastro" />
            </form>
        </div>
    </div>
</main>